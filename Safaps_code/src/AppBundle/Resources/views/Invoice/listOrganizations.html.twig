{% extends "::base.html.twig" %}

{% block title %} Organizations {% endblock %}

{% block body %}
<ul class="breadcrumb">
  <li class="active">Organizations</li>
</ul>
<h1> List of organizations:</h1>
<div class="list-group">
{%for o in organizations %}
  <a href="{{ path('organization_invoice_list', {'orgId': o.getId()}) }}" class="list-group-item">
    <h4 class="list-group-item-heading">{{o.getName()}}</h4>
    <p class="list-group-item-text"><span class="text-info">Email : </span> <span> {{o.getInvoiceMail()}} </span></p>
  </a>
{% endfor %}
</div>
{% endblock %}
